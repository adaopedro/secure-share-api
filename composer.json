{
    "name": "apedrodevelopers/secureshare-api",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/adaopedro/reactphp-http-cors-middleware"
        },
        {
            "type": "vcs",
            "url": "https://github.com/adaopedro/php-watcher"
        }
    ],
    "require": {
        "react/http": "1.11",
        "christoph-kluge/reactphp-http-cors-middleware": "dev-master",
        "nikic/fast-route": "^1.3",
        "react/mysql": "^0.6",
        "react/filesystem": "^0.1.2",
        "narrowspark/mimetypes": "^1.6",
        "firebase/php-jwt": "^6.10",
        "ralouphie/mimey": "^2.1",
        "rakit/validation": "1.0.0",
        "clue/redis-react": "2.7.0",
        "react/async": "^4.3.0"
    },
    "require-dev": {
        "seregazhuk/php-watcher": "dev-master",
        "doctrine/migrations": "4.0.x-dev",
        "phpunit/phpunit": "^10",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "wyrihaximus/composer-update-bin-autoload-path": true
        }
    },
    "scripts": {
        "run-server": "vendor/bin/php-watcher public/index.php",
        "run-tests": "php vendor/bin/phpunit",
        "run-phpstan": "php vendor/bin/phpstan.phar analyse -l max public app tests",
        "run-migrations": "php vendor/bin/doctrine-migrations"
    }
}
